<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="256dp"
        android:layout_height="51dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="@string/write_message_placeholder"
        android:inputType="textPersonName"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonShareText"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="#4cd137"
        android:text="@string/share_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_share_black_32dp" />

    <Button
        android:id="@+id/buttonShareImage"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="#4cd137"
        android:text="@string/share_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChooseImage" />

    <ImageButton
        android:id="@+id/buttonChooseImage"
        android:layout_width="257dp"
        android:layout_height="157dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonShareText"
        app:srcCompat="@drawable/ic_baseline_camera_alt_32" />
</androidx.constraintlayout.widget.ConstraintLayout>